# Copy this file to .env and fill in your values

# Jenkins Configuration
JENKINS_URL=http://localhost:8080
JENKINS_USER=admin
JENKINS_TOKEN=your_jenkins_api_token

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_REPO=owner/repository

# GitLab Configuration
GITLAB_URL=https://gitlab.com
GITLAB_TOKEN=your_gitlab_private_token
GITLAB_PROJECT=group/project-name

# Prometheus
PROMETHEUS_URL=http://localhost:9090

# Smart Alerting (optional - sensible defaults shown)
ALERT_BATCH_WINDOW=60       # seconds to collect alerts before sending batch
ALERT_DEDUP_WINDOW=300      # seconds to suppress duplicate alerts
ALERT_MAX_PER_HOUR=20       # maximum alerts sent per hour

# Slack (optional)
SLACK_WEBHOOK_URL=

# Email (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL=
